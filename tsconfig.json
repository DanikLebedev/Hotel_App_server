{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./built",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "lib": ["dom","ES6","DOM.Iterable","ES7"],
    "downlevelIteration": true
  },
  "include": [
    "**/src/**/*.ts",
    "**/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}


